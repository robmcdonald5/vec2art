{
	"name": "frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:unit": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:coverage:ui": "vitest run --coverage --ui",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:chromium": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
		"test:e2e:tablet": "playwright test --project=tablet-chrome",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:core": "playwright test tests/e2e/core-workflow.spec.ts",
		"test:e2e:wasm": "playwright test tests/e2e/wasm-integration.spec.ts",
		"test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
		"test:e2e:performance": "playwright test tests/e2e/performance.spec.ts",
		"test:e2e:errors": "playwright test tests/e2e/error-handling.spec.ts",
		"test:e2e:cross-platform": "playwright test tests/e2e/cross-platform.spec.ts",
		"test:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
		"test:a11y": "npm run test:accessibility",
		"test:smoke": "playwright test tests/e2e/core-workflow.spec.ts --project=chromium",
		"test:ci": "npm run test:coverage && npm run test:e2e",
		"test:ci:fast": "npm run test:unit && npm run test:smoke",
		"test:ci:full": "npm run test:coverage && npm run test:e2e && npm run test:a11y",
		"test:all": "npm run lint && npm run check && npm run test:ci:full",
		"test:install": "playwright install --with-deps",
		"test:report": "playwright show-report",
		"test:trace": "playwright show-trace",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"format": "prettier --write .",
		"quality:check": "npm run lint && npm run check && npm run test:coverage",
		"quality:full": "npm run lint && npm run check && npm run test:ci:full",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build",
		"storybook:test": "test-storybook",
		"storybook:test:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run storybook:build && npx http-server storybook-static --port 6006 --silent\" \"wait-on http://127.0.0.1:6006 && npm run storybook:test\"",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.2",
		"@chromatic-com/storybook": "^4.1.0",
		"@playwright/test": "^1.54.2",
		"@storybook/addon-a11y": "^9.1.2",
		"@storybook/addon-docs": "^9.1.2",
		"@storybook/addon-svelte-csf": "^5.0.7",
		"@storybook/addon-vitest": "^9.1.2",
		"@storybook/sveltekit": "^9.1.2",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.2.14",
		"@sveltejs/eslint-config": "^8.3.4",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/vite": "^4.1.11",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"eslint-plugin-storybook": "^9.1.2",
		"eslint-plugin-svelte": "^3.11.0",
		"happy-dom": "^18.0.1",
		"postcss": "^8.5.6",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"storybook": "^9.1.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0",
		"vitest": "^3.2.4",
		"@vitest/browser": "3.2.4",
		"playwright": "^1.54.2"
	},
	"dependencies": {
		"@eslint/js": "^9.33.0",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@typescript-eslint/parser": "^8.39.1",
		"bits-ui": "^2.9.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"lucide-svelte": "^0.539.0",
		"prettier-plugin-svelte": "^3.4.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^2.1.0",
		"vectorize-wasm": "file:../wasm/vectorize-wasm/pkg",
		"zod": "^4.0.17"
	}
}
